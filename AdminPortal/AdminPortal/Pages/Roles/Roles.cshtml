@page "/roles"
@model BlogAdminPortal.Pages.Roles.RolesModel

<link rel="stylesheet" href="~/css/roles.css" />

<div class="pageTitle"> Role <button type="button" class="btn btn-primary new" data-bs-toggle="modal" data-bs-target="#newRoleModal">Yeni Role Ekle</button></div>


<table id="roles"
       data-mobile-responsive="true"
       data-toggle="table"
       data-show-columns="false"
       data-toolbar="#toolbar"
       data-search="false"
       data-show-refresh="false"
       data-show-toggle="true"
       data-show-fullscreen="false"
       data-show-pagination-switch="false"
       data-show-columns-toggle-all="false"
       data-show-export="false"
       data-click-to-select="true"
       data-single-select="true"
       data-page-size="6"
       data-pagination="true"
       data-pagination-loop="false"
       data-pagination-h-align="left"
       data-pagination-detail-h-align="right"
       data-id-field="id"
       data-page-list="[10, 25, 50, 100, all]"
       data-show-footer="false"
       data-side-pagination="server"
       data-server-sort="true"
       data-sort-name="createdOn"
       data-sort-order="desc"
       data-query-params="queryParams"
       data-response-handler="responseHandler"></table>

<template id="dataTableActionsTemplate">
    <div class="dropdown">
        <span class="material-symbols-outlined" data-bs-toggle="dropdown">more_horiz</span>
        <ul class="dropdown-menu">
            <li><a tag="edit" class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#editRoleModal" data-id="#id#">Düzenle</a></li>
            <li><a tag="delete" class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#deleteRoleModal" data-id="#id#">Sil</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a tag="activate" class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#activatedRoleModal" data-id="#id#">Activate</a></li>
            <li><a tag="deactivate" class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#deactivatedRoleModal" data-id="#id#">Deactivate</a></li>
        </ul>
    </div>
</template>

<partial name="Partials/_New" />
<partial name="Partials/_Edit" />
<partial name="Partials/_Delete" />
<partial name="Partials/_Activated" />
<partial name="Partials/_Deactivated" />

<script src="~/js/roles.js"></script>
